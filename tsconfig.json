{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es2015",
    "target": "es5",
    "jsx": "react",
    "lib": ["es2015", "es2017", "dom"],
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@util/*": ["src/utils/*"],
      "@asset/*": ["src/assets/*"],
      "@page/*": ["src/pages/*"],
      "@model/*": ["src/models/*"],
      "@api/*": ["src/api/*"],
      "@component/*": ["src/components/*"],
      "@layout/*": ["src/layouts/*"]
    }
  },
  "include": ["src/**/*", "types/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "dist"]
}
